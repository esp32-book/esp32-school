#include <WiFi.h>
#include <WebServer.h>

// Ø§Ø·Ù„Ø§Ø¹Ø§Øª Ø´Ø¨Ú©Ù‡ Wi-Fi
const char* ssid = "YourSSID";
const char* password = "YourPassword";


// Ù¾ÛŒÙ† LED
const int ledPin = 2;

// Ø´ÛŒØ¡ ÙˆØ¨ Ø³Ø±ÙˆØ± - Ù¾ÙˆØ±Øª 80
WebServer server(80);

// ØµÙØ­Ù‡ HTML Ø¨Ø§ Ø¯Ùˆ Ø¯Ú©Ù…Ù‡
const char webpage[] PROGMEM = R"=====(<!DOCTYPE html>
<html>
<head><title>ESP32 LED Control</title></head>
<body>
<h1>LED CONTROL With Web Server</h1>
<p>LED Status: <span id="status">%STATE%</span></p>
<a href="/on"><button> ON </button></a>&nbsp;
<a href="/off"><button>Off</button></a>
</body>
</html>)=====";

// ØªØ§Ø¨Ø¹ Ù…Ø¯ÛŒØ±ÛŒØª Ù…Ø³ÛŒØ± Ø§ØµÙ„ÛŒ /
void handleRoot() {
  String html = webpage;
  html.replace("%STATE%", (digitalRead(ledPin)) ? "ON" : "Off");
  server.send_P(200, "text/html", html.c_str());
}

// ØªØ§Ø¨Ø¹ Ù…Ø¯ÛŒØ±ÛŒØª /on
void handleLEDOn() {
  digitalWrite(ledPin, HIGH);
  handleRoot();
}

// ØªØ§Ø¨Ø¹ Ù…Ø¯ÛŒØ±ÛŒØª /off
void handleLEDOff() {
  digitalWrite(ledPin, LOW);
  handleRoot();
}

void setup() {
  pinMode(ledPin, OUTPUT);
  digitalWrite(ledPin, LOW);

  Serial.begin(115200);

  WiFi.begin(ssid, password);
  Serial.print("Ø¯Ø± Ø­Ø§Ù„ Ø§ØªØµØ§Ù„ Ø¨Ù‡ Wi-Fi...");
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nâœ… Ø§ØªØµØ§Ù„ Ù…ÙˆÙÙ‚!");
  Serial.print("IP Address: ");
  Serial.println(WiFi.localIP());

  server.on("/", handleRoot);
  server.on("/on", handleLEDOn);
  server.on("/off", handleLEDOff);

  server.begin();
  Serial.println("ğŸŸ¢ ÙˆØ¨ Ø³Ø±ÙˆØ± Ø´Ø±ÙˆØ¹ Ø´Ø¯");
}

void loop() {
  server.handleClient();
}
