#include <WiFi.h>
#include <WebServer.h>
#include <DHT.h>

// ØªÙ†Ø¸ÛŒÙ…Ø§Øª Wi-Fi (Ø­Ø§Ù„Øª Station)
const char* ssid_STA = "YourSSID";         // Ù†Ø§Ù… Ø´Ø¨Ú©Ù‡ Wi-Fi Ø´Ù…Ø§
const char* password_STA = "YourPassword";  // Ø±Ù…Ø² Ø´Ø¨Ú©Ù‡ Wi-Fi Ø´Ù…Ø§

// ØªÙ†Ø¸ÛŒÙ…Ø§Øª Access Point
const char* ssid_AP = "ESP32-SmartDevice";
const char* password_AP = "12345678";       // Ø­Ø¯Ø§Ù‚Ù„ 8 Ú©Ø§Ø±Ø§Ú©ØªØ±

// Ù¾ÛŒÙ†â€ŒÙ‡Ø§
const int ledPin = 2;
#define DHTPIN 4
#define DHTTYPE DHT11
DHT dht(DHTPIN, DHTTYPE);

// Ø´ÛŒØ¡ ÙˆØ¨ Ø³Ø±ÙˆØ±
WebServer server(80);

// ØµÙØ­Ù‡ HTML Ú©Ø§Ù…Ù„
const char webpage[] PROGMEM = R"=====(<!DOCTYPE html>
<html>
<head>
    <title>ESP32 Smart Device</title>
    <meta charset="UTF-8">
    <style>
        body { font-family: Arial; text-align: center; padding: 20px; }
        h1 { color: #2c3e50; }
        button { padding: 10px 20px; margin: 10px; font-size: 16px; }
        .sensor { margin-top: 30px; }
    </style>
</head>
<body>
    <h1>ESP32 Smart Device Control</h1>
    
    <h2>LED Control</h2>
    <p>Status: <strong>%LEDSTATE%</strong></p>
    <a href="/on"><button>Turn ON</button></a>&nbsp;
    <a href="/off"><button>Turn OFF</button></a>

    <div class="sensor">
        <h2>Sensor Data</h2>
        <p>Temperature: %TEMP% &deg;C</p>
        <p>Humidity: %HUM% %</p>
    </div>
</body>
</html>)=====";

// ØªØ§Ø¨Ø¹ Ù…Ø¯ÛŒØ±ÛŒØª Ù…Ø³ÛŒØ± Ø§ØµÙ„ÛŒ /
void handleRoot() {
  float h = dht.readHumidity();
  float t = dht.readTemperature();

  if (isnan(h) || isnan(t)) {
    server.send(500, "text/html", "Error reading sensor");
    return;
  }

  String html = webpage;
  html.replace("%LEDSTATE%", (digitalRead(ledPin)) ? "ON" : "OFF");
  html.replace("%TEMP%", String(t));
  html.replace("%HUM%", String(h));

  server.send_P(200, "text/html", html.c_str());
}

// ØªØ§Ø¨Ø¹ Ø±ÙˆØ´Ù† Ú©Ø±Ø¯Ù† LED
void handleLEDOn() {
  digitalWrite(ledPin, HIGH);
  handleRoot();
}

// ØªØ§Ø¨Ø¹ Ø®Ø§Ù…ÙˆØ´ Ú©Ø±Ø¯Ù† LED
void handleLEDOff() {
  digitalWrite(ledPin, LOW);
  handleRoot();
}

void setup() {
  pinMode(ledPin, OUTPUT);
  digitalWrite(ledPin, LOW);

  Serial.begin(115200);
  dht.begin();

  // Ø§ØªØµØ§Ù„ Ø¨Ù‡ Wi-Fi (Ø­Ø§Ù„Øª Station)
  WiFi.begin(ssid_STA, password_STA);
  Serial.print("Ø¯Ø± Ø­Ø§Ù„ Ø§ØªØµØ§Ù„ Ø¨Ù‡ Wi-Fi...");
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nâœ… Ø§ØªØµØ§Ù„ Ø¨Ù‡ Wi-Fi Ù…ÙˆÙÙ‚!");
  Serial.print("IP Address (STA): ");
  Serial.println(WiFi.localIP());

  // Ø§ÛŒØ¬Ø§Ø¯ Access Point
  WiFi.softAP(ssid_AP, password_AP);
  IPAddress ip = WiFi.softAPIP();
  Serial.println("ğŸ“¶ Access Point ÙØ¹Ø§Ù„ Ø´Ø¯");
  Serial.print("IP Address (AP): ");
  Serial.println(ip);

  // Ù…Ø¯ÛŒØ±ÛŒØª Ø¯Ø±Ø®ÙˆØ§Ø³Øªâ€ŒÙ‡Ø§
  server.on("/", handleRoot);
  server.on("/on", handleLEDOn);
  server.on("/off", handleLEDOff);

  server.begin();
  Serial.println("ğŸŸ¢ ÙˆØ¨ Ø³Ø±ÙˆØ± Ø´Ø±ÙˆØ¹ Ø´Ø¯");
}

void loop() {
  server.handleClient();
}
